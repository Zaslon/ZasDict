{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dictionary Schema",
  "type": "object",
  "properties": {
    "words": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "entry": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "form": { "type": "string" }
            },
            "required": ["id", "form"]
          },
          "translations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "forms": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["title", "forms"]
            }
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "contents": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "text": { "type": "string" }
              },
              "required": ["title", "text"]
            }
          },
          "variations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "form": { "type": "string" }
              },
              "required": ["title", "form"]
            }
          },
          "relations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "entry": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" },
                    "form": { "type": "string" }
                  },
                  "required": ["id", "form"]
                }
              },
              "required": ["title", "entry"]
            }
          }
        },
        "required": ["entry"]
      }
    },
    "version": {
      "type": "integer",
      "const": 1
    }
  },
  "required": ["words"]
}